<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:domy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:focusable="true" >

    <ImageView
        android:id="@+id/list2_focus"
        android:layout_width="@dimen/record_downlist_item_layout_list2_focus_2layout_width"
        android:layout_height="@dimen/record_downlist_item_layout_list2_focus_75layout_height"
        android:background="@drawable/focus"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/list2_bg"
        android:layout_width="@dimen/record_downlist_item_layout_list2_bg_86layout_width"
        android:layout_height="@dimen/record_downlist_item_layout_list2_bg_63layout_height"
        android:layout_alignLeft="@id/list2_focus"
        android:layout_alignTop="@id/list2_focus"
        android:layout_marginLeft="@dimen/record_downlist_item_layout_list2_bg_6layout_marginLeft"
        android:layout_marginTop="@dimen/record_downlist_item_layout_list2_bg_85layout_marginTop"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/list2_bg"
        android:layout_alignTop="@id/list2_bg"
        android:layout_marginRight="@dimen/record_downlist_item_layout_delete_26layout_marginRight"
        android:layout_marginTop="@dimen/record_downlist_item_layout_delete_69layout_marginTop"
        android:background="@drawable/delete_icon"
        android:visibility="invisible" />

    <com.hiveview.cloudscreen.vipvideo.view.EffectiveMarqueeTextView
        android:id="@+id/list2_txt"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list2_bg"
        android:layout_alignRight="@id/list2_bg"
        android:layout_below="@id/list2_bg"
        android:layout_marginLeft="@dimen/record_downlist_item_layout_list2_txt_0layout_marginLeft"
        android:layout_marginRight="@dimen/record_downlist_item_layout_list2_txt_26layout_marginRight"
        android:layout_marginTop="@dimen/record_downlist_item_layout_list2_txt_91layout_marginTop"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#646464"
        android:textSize="@dimen/record_downlist_item_layout_list2_txt_97textSize"
        domy:usertypeface="SIMHEI" />

</RelativeLayout>