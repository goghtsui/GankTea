<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/ll_row_1"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="top"
        android:layout_marginTop="-17dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/item_row_1_column_1"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_1_column_2"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_1_column_3"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_1_column_4"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_1_column_5"
            layout="@layout/view_six_column_list_item_film" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_row_2"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:gravity="center"
        android:layout_marginBottom="-10dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/item_row_2_column_1"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_2_column_2"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_2_column_3"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_2_column_4"
            layout="@layout/view_six_column_list_item_film" />

        <include
            android:id="@+id/item_row_2_column_5"
            layout="@layout/view_six_column_list_item_film" />

    </LinearLayout>

</FrameLayout>
