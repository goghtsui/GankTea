<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:domy="http://schemas.android.com/apk/res-auto"
    android:layout_width="792dp"
    android:layout_height="720dp"
    android:layout_centerVertical="true"
    android:background="@drawable/bg_vip_info"
    android:gravity="right"
    android:orientation="vertical">

    <View
        android:id="@+id/vip_icon"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginRight="133.3dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_buy_vip" />

    <com.hiveview.cloudscreen.vipvideo.view.TypeFaceTextView
        android:id="@+id/tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="108dp"
        android:layout_marginTop="24dp"
        android:text="@string/damai_vip_privilege"
        android:textColor="#fdb800"
        android:textSize="32sp"
        domy:usertypeface="ARIAL"></com.hiveview.cloudscreen.vipvideo.view.TypeFaceTextView>

    <ListView
        android:id="@+id/listview_privilege_info"
        android:layout_width="306dp"
        android:layout_height="452dp"
        android:layout_marginTop="18dp"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:divider="@null"
        android:dividerHeight="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:smoothScrollbar="false"></ListView>

</LinearLayout>