<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/dlive_detail_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_bespeak_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="445.3dp"
        android:background="@drawable/focused_view_selector"
        android:clipChildren="false"
        android:focusable="true"
        android:gravity="center">

        <com.hiveview.cloudscreen.vipvideo.view.TypeFaceTextView
            android:id="@+id/tv_bespeak_txt"
            android:layout_width="172dp"
            android:layout_height="65dp"
            android:background="@drawable/button_default"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="26.6sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cancel_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="45.3dp"
        android:layout_toRightOf="@+id/rl_bespeak_txt"
        android:background="@drawable/focused_view_selector"
        android:clipChildren="false"
        android:focusable="true"
        android:gravity="center">

        <com.hiveview.cloudscreen.vipvideo.view.TypeFaceTextView
            android:id="@+id/tv_cancel_txt"
            android:layout_width="172dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_default"
            android:gravity="center"
            android:text="返 回"
            android:textColor="@android:color/white"
            android:textSize="26.6sp" />


    </RelativeLayout>


</RelativeLayout>
