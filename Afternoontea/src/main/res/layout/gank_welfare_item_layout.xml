<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/gank_welfare_item_margin"
    app:cardCornerRadius="@dimen/gank_welfare_item_corner"
    app:cardElevation="@dimen/gank_welfare_item_elevation">

    <ImageView
        android:id="@+id/gank_welfare_item_imageview"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/gank_welfare_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorTransparent"
        android:ellipsize="end"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="@dimen/gank_list_item_standard_margin_left"
        android:text="@string/gank_list_item_author_name_unknown"
        android:textColor="?attr/colorPrimary"
        android:visibility="gone"
        android:textSize="@dimen/gank_list_item_title_text"
        android:textStyle="normal"/>

</android.support.v7.widget.CardView>